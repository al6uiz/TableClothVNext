<Window
		xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:lang="clr-namespace:TableCloth3.Shared.Languages"
		xmlns:vm="clr-namespace:TableCloth3.Shared.ViewModels"
		mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="320"
		Width="600" Height="320" CanResize="False"
		x:Class="TableCloth3.Shared.Windows.AboutWindow"
		x:DataType="vm:AboutWindowViewModel"
		WindowStartupLocation="CenterOwner"
		Title="{x:Static lang:SharedStrings.AboutWindowTitle}"
		Icon="avares:/Assets/Images/TableCloth.png">
		<Design.DataContext>
				<vm:AboutWindowViewModel />
		</Design.DataContext>
		<Grid RowDefinitions="Auto,*">
				<Grid ColumnDefinitions="Auto,*" Background="Transparent">
						<Image Margin="8,4" IsHitTestVisible="False" Source="avares:/Assets/Images/TableCloth.png" Width="16" Height="16" DockPanel.Dock="Left" Name="WindowIcon" RenderOptions.BitmapInterpolationMode="HighQuality">
								<Image.IsVisible>
										<OnPlatform Default="False">
												<On
														Options="Windows"
														Content="True" />
										</OnPlatform>
								</Image.IsVisible>
						</Image>
						<TextBlock Text="{Binding Title, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" FontSize="12" IsHitTestVisible="False" VerticalAlignment="Center" Grid.Column="1">
								<TextBlock.IsVisible>
										<OnPlatform Default="False">
												<On
														Options="Windows"
														Content="True" />
										</OnPlatform>
								</TextBlock.IsVisible>
						</TextBlock>
				</Grid>

				<Grid Margin="20" Grid.Row="1">
						<Grid.RowDefinitions>
								<RowDefinition Height="*" />
								<RowDefinition Height="Auto" />
						</Grid.RowDefinitions>
						<Image Source="avares:/Assets/Images/TableCloth.png" Opacity="0.4" Height="300" />
						<!--<Rectangle Fill="#66FFFFFF" Grid.RowSpan="2" />-->

						<Label Grid.Row="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
								<TextBlock TextAlignment="Center">
										<TextBlock FontSize="25" Text="{x:Static lang:SharedStrings.AppTitle}" FontWeight="Bold" />
										<LineBreak />
										<TextBlock Text="{Binding VersionInfo}" FontWeight="SemiBold" />
										<LineBreak />
										<LineBreak />
										<TextBlock Text="{x:Static lang:SharedStrings.AppLicense}" />
										<LineBreak />
										<TextBlock Text="{x:Static lang:SharedStrings.AppTrademark}" />
										<LineBreak />
										<LineBreak />
										<TextBlock Text="{x:Static lang:SharedStrings.AppCopyright}" FontWeight="SemiBold" />
								</TextBlock>
						</Label>

						<StackPanel Grid.Row="1" HorizontalAlignment="Center" Orientation="Horizontal">
								<Button Content="{x:Static lang:SharedStrings.VisitWebSiteButton}" Command="{Binding VisitWebSiteButtonCommand}" Margin="5,0" />
								<Button Content="{x:Static lang:SharedStrings.VisitGitHubButton}" Command="{Binding VisitGitHubButtonCommand}" Margin="5,0" />
								<Button Content="{x:Static lang:SharedStrings.CheckUpdateButton}" Command="{Binding CheckUpdateButtonCommand}" Margin="5,0" />
								<Button Content="{x:Static lang:SharedStrings.AboutWindowCloseButton}" Command="{Binding CloseButtonCommand}" Margin="5,0" />
						</StackPanel>
				</Grid>
		</Grid>
</Window>
